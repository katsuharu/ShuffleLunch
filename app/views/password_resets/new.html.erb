<% provide(:title, "パスワードの再設定") %>
<% provide(:page_title, "パスワードを忘れた方へ") %>

<div class="col-lg-12">
  <div class="bs-component">
    <%= form_for(:password_reset, url: password_resets_path, class: 'form-horizontal') do |f| %>
      <fieldset>
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "パスワードを再設定する", class: "btn btn-primary" %>
          <%= link_to "戻る", :back, class: "btn btn-success" %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>