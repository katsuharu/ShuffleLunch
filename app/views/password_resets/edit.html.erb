<% provide(:title, "パスワードの再設定") %>
<% provide(:page_title, "パスワードの再設定") %>

<%= render 'shared/error_messages' %>

<div class="col-lg-12">
  <div class="bs-component">
    <%= form_for(@user, url: password_reset_path(params[:id]), class: 'form-horizontal') do |f| %>
      <fieldset>
        <%= hidden_field_tag :email, @user.email %>

        <div class="form-group">
          <%= f.label :新規パスワード %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "新規パスワード再入力" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "パスワードを再設定する", class: "btn btn-primary" %>
        </div>

      </fieldset>
    <% end %>
  </div>
</div>